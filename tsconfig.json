{
  "compilerOptions": {
    "target": "ESNext",
    "module": "es2015",
    "moduleResolution": "Bundler",
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
  },
  "include": ["src"]
}